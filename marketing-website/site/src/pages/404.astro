---
/**
 * 404 Page
 * Fun 404 page with navigation suggestions
 */

import PageLayout from '../layouts/PageLayout.astro';
import { siteConfig } from '../data/siteConfig';

const title = `Pagina niet gevonden - ${siteConfig.name}`;
const description = 'Deze pagina bestaat niet. Maar geen zorgen, we helpen je terug op het juiste pad.';
---

<PageLayout title={title} description={description} showCTA={false} noindex={true}>
  <!-- 404 Section -->
  <section class="py-16 md:py-24 min-h-[70vh] flex items-center bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Illustration -->
        <div class="mb-8 animate-slide-up">
          <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-coral-100 mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5.8 11.3 2 22l10.7-3.79"/>
              <path d="M4 3h.01"/>
              <path d="M22 8h.01"/>
              <path d="M15 2h.01"/>
              <path d="M22 20h.01"/>
              <path d="m22 2-2.24.75a2.9 2.9 0 0 0-1.96 3.12v0c.1.86-.57 1.63-1.45 1.63h-.38c-.86 0-1.6.6-1.76 1.44L14 10"/>
              <path d="m22 13-.82-.33c-.86-.34-1.82.2-1.98 1.11v0c-.11.7-.72 1.22-1.43 1.22H17"/>
              <path d="m11 2 .33.82c.34.86-.2 1.82-1.11 1.98v0C9.52 4.9 9 5.52 9 6.23V7"/>
              <path d="M11 13c1.93 1.93 2.83 4.17 2 5-.83.83-3.07-.07-5-2-1.93-1.93-2.83-4.17-2-5 .83-.83 3.07.07 5 2Z"/>
            </svg>
          </div>

          <h1 class="text-6xl md:text-8xl font-bold text-coral-600 mb-4">
            404
          </h1>
          <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-4">
            Oeps! Dit feest bestaat niet
          </h2>
          <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
            Het lijkt erop dat deze pagina is verdwenen. Net als de laatste chips op een feestje.
          </p>
        </div>

        <!-- Navigation Suggestions -->
        <div class="mt-12 mb-8 animate-slide-up" style="animation-delay: 200ms;">
          <p class="text-lg text-gray-700 mb-6">
            Maar geen zorgen, hier zijn een paar suggesties:
          </p>

          <div class="grid md:grid-cols-2 gap-4 max-w-2xl mx-auto">
            <!-- Quick Link 1 -->
            <a
              href="/"
              class="group bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-coral-500 hover:shadow-card transition-all duration-200 text-left"
            >
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-lg bg-coral-100 flex items-center justify-center group-hover:bg-coral-500 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:stroke-white transition-colors">
                    <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                    <polyline points="9 22 9 12 15 12 15 22"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal group-hover:text-coral-600 transition-colors">
                    Terug naar home
                  </h3>
                  <p class="text-sm text-gray-500">
                    Begin opnieuw
                  </p>
                </div>
              </div>
            </a>

            <!-- Quick Link 2 -->
            <a
              href="/functies"
              class="group bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-turquoise-500 hover:shadow-card transition-all duration-200 text-left"
            >
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-lg bg-turquoise-100 flex items-center justify-center group-hover:bg-turquoise-500 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4ECDC4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:stroke-white transition-colors">
                    <path d="M12 20a8 8 0 1 0 0-16 8 8 0 0 0 0 16Z"/>
                    <path d="M12 14a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z"/>
                    <path d="M12 2v2"/>
                    <path d="M12 22v-2"/>
                    <path d="m17 20.66-1-1.73"/>
                    <path d="M11 10.27 7 3.34"/>
                    <path d="m20.66 17-1.73-1"/>
                    <path d="m3.34 7 1.73 1"/>
                    <path d="M14 12h8"/>
                    <path d="M2 12h2"/>
                    <path d="m20.66 7-1.73 1"/>
                    <path d="m3.34 17 1.73-1"/>
                    <path d="m17 3.34-1 1.73"/>
                    <path d="m11 13.73-4 6.93"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal group-hover:text-turquoise-600 transition-colors">
                    Bekijk onze functies
                  </h3>
                  <p class="text-sm text-gray-500">
                    Ontdek Party Pilot
                  </p>
                </div>
              </div>
            </a>

            <!-- Quick Link 3 -->
            <a
              href="/hoe-werkt-het"
              class="group bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-sunshine-500 hover:shadow-card transition-all duration-200 text-left"
            >
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-lg bg-sunshine-100 flex items-center justify-center group-hover:bg-sunshine-500 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FFE66D" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:stroke-white transition-colors">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                    <path d="M12 17h.01"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal group-hover:text-sunshine-600 transition-colors">
                    Hoe werkt het?
                  </h3>
                  <p class="text-sm text-gray-500">
                    Leer meer over Party Pilot
                  </p>
                </div>
              </div>
            </a>

            <!-- Quick Link 4 -->
            <a
              href="/waitlist"
              class="group bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-coral-500 hover:shadow-card transition-all duration-200 text-left"
            >
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-lg bg-coral-100 flex items-center justify-center group-hover:bg-coral-500 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:stroke-white transition-colors">
                    <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
                    <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
                    <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
                    <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal group-hover:text-coral-600 transition-colors">
                    Start gratis
                  </h3>
                  <p class="text-sm text-gray-500">
                    Probeer Party Pilot
                  </p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <!-- Primary CTA -->
        <div class="mt-12 animate-slide-up" style="animation-delay: 300ms;">
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/"
              class="inline-block bg-coral-500 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-coral-600 transition-all duration-200 shadow-button hover:shadow-button-hover"
            >
              Terug naar home
            </a>
            <a
              href="/contact"
              class="inline-block bg-white border-2 border-coral-500 text-coral-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-coral-50 transition-all duration-200"
            >
              Neem contact op
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
