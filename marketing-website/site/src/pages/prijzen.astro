---
/**
 * Pricing Page
 * Comprehensive pricing information with calculator and comparison
 */

import PageLayout from '../layouts/PageLayout.astro';
import PricingTable from '../components/sections/PricingTable.astro';
import PricingCalculator from '../components/islands/PricingCalculator';
import { pricingTiers, pricingFAQ } from '../data/pricing';
import { featuredTestimonials } from '../data/testimonials';
import { siteConfig } from '../data/siteConfig';

const title = `Prijzen - ${siteConfig.name}`;
const description = 'Transparante prijzen voor elk feest. Start gratis tot 15 gasten, betaal alleen wanneer je groeit. Geen verborgen kosten.';

// Pick a testimonial about value
const valueTestimonial = featuredTestimonials[0];
---

<PageLayout title={title} description={description} showCTA={true}>
  <!-- Page Header -->
  <section class="py-16 md:py-24 bg-gradient-hero text-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 animate-slide-up">
          Eerlijke prijzen voor elk feest
        </h1>
        <p class="text-lg md:text-xl leading-relaxed opacity-90 animate-slide-up" style="animation-delay: 200ms;">
          Start gratis. Betaal alleen als je groeit. Geen verborgen kosten, geen verrassingen.
        </p>
      </div>
    </div>
  </section>

  <!-- Pricing Calculator Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-4">
          Bereken direct je prijs
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed">
          Transparante prijzen op basis van het aantal gasten. Schuif en zie meteen wat je betaalt.
        </p>
      </div>

      <div class="animate-slide-up">
        <PricingCalculator client:load />
      </div>
    </div>
  </section>

  <!-- Pricing Table Section -->
  <PricingTable />

  <!-- Feature Comparison Table -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-4">
          Vergelijk alle functies
        </h2>
        <p class="text-lg text-gray-600">
          Zie precies wat elke tier te bieden heeft
        </p>
      </div>

      <div class="max-w-5xl mx-auto overflow-x-auto">
        <table class="w-full bg-white rounded-lg shadow-card overflow-hidden">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-charcoal">
                Functie
              </th>
              {pricingTiers.map(tier => (
                <th class="px-6 py-4 text-center text-sm font-semibold text-charcoal">
                  {tier.name}
                </th>
              ))}
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {pricingTiers[0].features.map((feature, index) => (
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 text-sm text-gray-700">
                  {feature.text}
                </td>
                {pricingTiers.map(tier => {
                  const tierFeature = tier.features[index];
                  return (
                    <td class="px-6 py-4 text-center">
                      {tierFeature.included ? (
                        <svg class="w-6 h-6 text-success mx-auto" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <polyline points="20 6 9 17 4 12"/>
                        </svg>
                      ) : (
                        <svg class="w-6 h-6 text-gray-300 mx-auto" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <line x1="18" y1="6" x2="6" y2="18"/>
                          <line x1="6" y1="6" x2="18" y2="18"/>
                        </svg>
                      )}
                    </td>
                  );
                })}
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <div class="text-center mt-8">
        <a
          href="/functies"
          class="inline-flex items-center gap-2 text-lg font-semibold text-coral-600 hover:text-coral-700 transition-colors duration-200 group"
        >
          <span>Bekijk alle functies in detail</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform duration-200">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-2xl shadow-card p-8 md:p-12">
          <div class="flex items-start gap-2 mb-6">
            {Array.from({ length: 5 }).map((_, i) => (
              <svg class={`w-6 h-6 ${i < valueTestimonial.rating ? 'text-sunshine-500 fill-current' : 'text-gray-300'}`} xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
            ))}
          </div>
          <blockquote class="text-xl md:text-2xl text-gray-700 leading-relaxed mb-6 italic">
            "{valueTestimonial.quote}"
          </blockquote>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-coral-100 flex items-center justify-center text-coral-600 font-bold text-lg">
              {valueTestimonial.name.charAt(0)}
            </div>
            <div>
              <div class="font-semibold text-charcoal">
                {valueTestimonial.name}
              </div>
              <div class="text-sm text-gray-500">
                {valueTestimonial.eventType}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing FAQ -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-4">
          Veelgestelde vragen over prijzen
        </h2>
        <p class="text-lg text-gray-600">
          Alles wat je moet weten over onze prijzen
        </p>
      </div>

      <div class="max-w-3xl mx-auto space-y-4">
        {pricingFAQ.map((item, index) => (
          <details class="group bg-white rounded-lg shadow-soft hover:shadow-card transition-shadow duration-200 animate-slide-up" style={`animation-delay: ${index * 100}ms;`}>
            <summary class="cursor-pointer list-none px-6 py-4 flex items-center justify-between gap-4">
              <h4 class="text-lg font-semibold text-charcoal group-open:text-coral-600 transition-colors duration-200">
                {item.question}
              </h4>
              <div class="flex-shrink-0 w-6 h-6 text-coral-500 transition-transform duration-200 group-open:rotate-45">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"/>
                  <path d="M12 5v14"/>
                </svg>
              </div>
            </summary>
            <div class="px-6 pb-4 pt-2">
              <p class="text-base text-gray-600 leading-relaxed">
                {item.answer}
              </p>
            </div>
          </details>
        ))}
      </div>

      <div class="text-center mt-12 p-6 bg-gray-50 rounded-lg max-w-2xl mx-auto">
        <p class="text-base text-gray-700 mb-4">
          Meer vragen over prijzen of functies?
        </p>
        <a
          href="/faq"
          class="inline-flex items-center gap-2 text-lg font-semibold text-coral-600 hover:text-coral-700 transition-colors duration-200"
        >
          <span>Bekijk alle veelgestelde vragen</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* Smooth accordion animation */
  details summary::-webkit-details-marker {
    display: none;
  }

  details[open] summary {
    padding-bottom: 0.5rem;
  }

  details[open] > div {
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
