---
/**
 * Blog Index Page
 * Blog placeholder with coming soon posts and newsletter signup
 */

import PageLayout from '../../layouts/PageLayout.astro';
import WaitlistForm from '../../components/islands/WaitlistForm';
import { siteConfig } from '../../data/siteConfig';

const title = `Blog - ${siteConfig.name}`;
const description = 'Tips, trucs en inspiratie voor het perfecte feest. Blijf op de hoogte van de nieuwste artikelen en feesttrends.';

// Placeholder blog posts
const placeholderPosts = [
  {
    id: 1,
    title: '10 tips voor de perfecte BBQ',
    excerpt: 'Van marinades tot grilltemperaturen â€” ontdek hoe je een onvergetelijke BBQ organiseert.',
    category: 'Tips',
    readTime: '5 min',
    icon: 'Flame',
  },
  {
    id: 2,
    title: 'Hoe organiseer je een feest zonder stress',
    excerpt: 'Een stapsgewijze gids voor stressvrij feesten organiseren, van planning tot uitvoering.',
    category: 'Gids',
    readTime: '8 min',
    icon: 'Heart',
  },
  {
    id: 3,
    title: 'De beste party games voor volwassenen',
    excerpt: 'Leuke spelletjes die je feest naar een hoger niveau tillen. Niet kinderachtig, wel hilarisch.',
    category: 'Entertainment',
    readTime: '6 min',
    icon: 'Gamepad2',
  },
];
---

<PageLayout title={title} description={description} showCTA={false}>
  <!-- Page Header -->
  <section class="py-16 md:py-24 bg-gradient-hero text-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 animate-slide-up">
          Party Pilot Blog
        </h1>
        <p class="text-lg md:text-xl leading-relaxed opacity-90 animate-slide-up" style="animation-delay: 200ms;">
          Tips, trucs en inspiratie voor het perfecte feest
        </p>
      </div>
    </div>
  </section>

  <!-- Coming Soon Message -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <div class="w-20 h-20 rounded-2xl bg-coral-100 flex items-center justify-center mx-auto mb-6 animate-slide-up">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="16" x2="8" y1="13" y2="13"/>
            <line x1="16" x2="8" y1="17" y2="17"/>
            <line x1="10" x2="8" y1="9" y2="9"/>
          </svg>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-4 animate-slide-up" style="animation-delay: 100ms;">
          Binnenkort beschikbaar
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed animate-slide-up" style="animation-delay: 200ms;">
          We zijn druk bezig met het schrijven van waardevolle content voor feestorganisatoren.
          Schrijf je in voor onze nieuwsbrief om het als eerste te horen wanneer we live gaan.
        </p>
      </div>

      <!-- Placeholder Blog Posts -->
      <div class="max-w-5xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          {placeholderPosts.map((post, index) => (
            <div class="bg-white rounded-2xl shadow-card p-6 hover:shadow-card-hover transition-all duration-300 opacity-75 animate-slide-up" style={`animation-delay: ${index * 100}ms;`}>
              <div class="flex items-center justify-between mb-4">
                <span class="px-3 py-1 bg-gray-100 text-gray-600 text-sm font-medium rounded-full">
                  {post.category}
                </span>
                <span class="text-sm text-gray-500">
                  {post.readTime}
                </span>
              </div>

              <div class="w-12 h-12 rounded-lg bg-coral-100 flex items-center justify-center mb-4">
                {post.icon === 'Flame' && (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 0 0 2.5 2.5z"/>
                  </svg>
                )}
                {post.icon === 'Heart' && (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
                  </svg>
                )}
                {post.icon === 'Gamepad2' && (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="6" x2="10" y1="12" y2="12"/>
                    <line x1="8" x2="8" y1="10" y2="14"/>
                    <line x1="15" x2="15.01" y1="13" y2="13"/>
                    <line x1="18" x2="18.01" y1="11" y2="11"/>
                    <rect width="20" height="12" x="2" y="6" rx="2"/>
                  </svg>
                )}
              </div>

              <h3 class="text-xl font-bold text-charcoal mb-3">
                {post.title}
              </h3>
              <p class="text-gray-600 mb-4">
                {post.excerpt}
              </p>

              <div class="flex items-center text-sm text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                <span>Binnenkort beschikbaar</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-card p-8 md:p-12">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h2 class="text-2xl md:text-3xl font-bold text-charcoal mb-4">
                Ontvang nieuwe artikelen in je inbox
              </h2>
              <p class="text-lg text-gray-600 mb-6">
                Schrijf je in voor onze nieuwsbrief en mis geen enkel artikel over feestorganisatie,
                tips en Party Pilot updates.
              </p>
              <ul class="space-y-2">
                <li class="flex items-center gap-2 text-gray-700">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#4ECDC4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>Wekelijkse feesttips</span>
                </li>
                <li class="flex items-center gap-2 text-gray-700">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#4ECDC4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>Exclusieve content</span>
                </li>
                <li class="flex items-center gap-2 text-gray-700">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#4ECDC4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>Party Pilot updates</span>
                </li>
              </ul>
            </div>
            <div>
              <WaitlistForm client:load compact />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-6">
        Ontdek Party Pilot
      </h2>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Klaar om je feestorganisatie naar een hoger niveau te tillen?
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/waitlist"
          class="inline-block bg-coral-500 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-coral-600 transition-all duration-200 shadow-button hover:shadow-button-hover"
        >
          Start gratis
        </a>
        <a
          href="/functies"
          class="inline-block bg-white border-2 border-coral-500 text-coral-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-coral-50 transition-all duration-200"
        >
          Bekijk functies
        </a>
      </div>
    </div>
  </section>
</PageLayout>
