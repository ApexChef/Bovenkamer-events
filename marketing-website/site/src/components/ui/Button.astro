---
/**
 * Button Component
 * Reusable button with multiple variants and sizes
 */

import type { ButtonProps } from '../../types';

interface Props extends ButtonProps {}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  fullWidth = false,
  disabled = false,
  icon,
  iconPosition = 'left',
  class: className = '',
  ...rest
} = Astro.props;

// Base classes
const baseClasses = 'inline-flex items-center justify-center gap-2 font-semibold rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

// Variant classes
const variantClasses = {
  primary: 'bg-coral-500 text-white hover:bg-coral-600 shadow-button hover:shadow-button-hover focus:ring-coral-500',
  secondary: 'bg-white text-coral-500 border-2 border-coral-500 hover:bg-gray-50 shadow-soft hover:shadow-card focus:ring-coral-500',
  ghost: 'bg-transparent text-gray-700 hover:bg-gray-50 hover:text-charcoal focus:ring-gray-300',
};

// Size classes
const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

// Full width class
const widthClass = fullWidth ? 'w-full' : '';

// Combined classes
const buttonClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${widthClass} ${className}`;

// Icon rendering (placeholder - would use actual icon library)
const iconHTML = icon ? `<span class="w-5 h-5">[${icon}]</span>` : '';
---

{href ? (
  <a
    href={href}
    class={buttonClasses}
    {...rest}
  >
    {icon && iconPosition === 'left' && <span set:html={iconHTML} />}
    <slot />
    {icon && iconPosition === 'right' && <span set:html={iconHTML} />}
  </a>
) : (
  <button
    type={type}
    class={buttonClasses}
    disabled={disabled}
    {...rest}
  >
    {icon && iconPosition === 'left' && <span set:html={iconHTML} />}
    <slot />
    {icon && iconPosition === 'right' && <span set:html={iconHTML} />}
  </button>
)}
