---
/**
 * Social Proof Strip
 * Small social proof bar with avatar stack, stats, and rating
 */

import { Star } from 'lucide-react';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`bg-white/50 backdrop-blur-sm border-y border-gray-100 py-6 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-8">
      <!-- Avatar Stack -->
      <div class="flex items-center -space-x-3">
        <div class="w-10 h-10 rounded-full bg-coral-500 border-2 border-white flex items-center justify-center shadow-soft">
          <span class="text-white font-semibold text-sm">M</span>
        </div>
        <div class="w-10 h-10 rounded-full bg-turquoise-500 border-2 border-white flex items-center justify-center shadow-soft">
          <span class="text-white font-semibold text-sm">S</span>
        </div>
        <div class="w-10 h-10 rounded-full bg-sunshine-500 border-2 border-white flex items-center justify-center shadow-soft">
          <span class="text-white font-semibold text-sm">L</span>
        </div>
        <div class="w-10 h-10 rounded-full bg-coral-400 border-2 border-white flex items-center justify-center shadow-soft">
          <span class="text-white font-semibold text-sm">+</span>
        </div>
      </div>

      <!-- Stats -->
      <div class="flex items-center gap-2">
        <span class="text-base text-gray-700">
          Al <span class="font-bold text-coral-600">100+</span> feesten georganiseerd
        </span>
      </div>

      <!-- Divider -->
      <div class="hidden md:block w-px h-6 bg-gray-200"></div>

      <!-- Rating -->
      <div class="flex items-center gap-2">
        <div class="flex items-center gap-0.5">
          {Array.from({ length: 5 }, (_, i) => (
            <Star
              key={i}
              className="w-4 h-4 fill-sunshine-500 text-sunshine-500"
            />
          ))}
        </div>
        <span class="text-base font-semibold text-gray-700">
          4.9/5
        </span>
      </div>
    </div>
  </div>
</div>
