---
/**
 * CTA Section
 * Customizable call-to-action banner with gradient background
 */

import Button from '../ui/Button.astro';

interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  class?: string;
}

const {
  title = 'Klaar om je beste feest ooit te organiseren?',
  subtitle = 'Sluit je aan bij duizenden feestorganisatoren die Party Pilot gebruiken',
  ctaText = 'Start gratis',
  ctaHref = '/waitlist',
  secondaryCtaText,
  secondaryCtaHref,
  class: className = '',
} = Astro.props;
---

<section class={`gradient-coral py-16 md:py-20 ${className}`}>
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
      {title}
    </h2>
    <p class="text-lg md:text-xl text-white/90 mb-8 max-w-2xl mx-auto leading-relaxed">
      {subtitle}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href={ctaHref}
        class="inline-block bg-white text-coral-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-50 transition-all duration-200 shadow-lg hover:shadow-xl"
      >
        {ctaText}
      </a>

      {secondaryCtaText && secondaryCtaHref && (
        <a
          href={secondaryCtaHref}
          class="inline-block bg-transparent border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white/10 transition-all duration-200"
        >
          {secondaryCtaText}
        </a>
      )}
    </div>

    <!-- Additional Info -->
    <p class="text-sm text-white/75 mt-6">
      Geen creditcard nodig â€¢ Gratis tot 15 gasten
    </p>
  </div>
</section>
