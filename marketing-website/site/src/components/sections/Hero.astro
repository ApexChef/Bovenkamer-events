---
/**
 * Hero Section
 * Full-width hero with gradient background, two-column layout
 */

import Button from '../ui/Button.astro';
---

<section class="gradient-hero py-16 md:py-24 lg:py-32 relative overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left Column - Content -->
      <div class="text-center lg:text-left animate-fade-in">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-charcoal mb-6 leading-tight text-shadow">
          Organiseer moeiteloos het perfecte feest
        </h1>
        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          Van uitnodiging tot afwas — Party Pilot denkt aan alles. Dieetwensen, boodschappenlijsten, live quiz en meer.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <Button variant="primary" size="lg" href="/waitlist">
            Start gratis
          </Button>
          <Button variant="secondary" size="lg" href="/functies">
            Ontdek functies
          </Button>
        </div>

        <!-- Social Proof -->
        <p class="text-sm text-gray-600">
          Al <span class="font-semibold text-coral-600">100+</span> feesten georganiseerd •
          <span class="font-semibold text-coral-600">4.9/5</span> sterren
        </p>
      </div>

      <!-- Right Column - Visual -->
      <div class="relative animate-slide-in-right">
        <div class="relative w-full h-[400px] md:h-[500px] flex items-center justify-center">
          <!-- Decorative blobs and icons -->
          <div class="absolute inset-0 flex items-center justify-center">
            <!-- Large coral blob -->
            <div class="absolute w-64 h-64 md:w-80 md:h-80 bg-coral-200 rounded-full blur-3xl opacity-40 animate-float" style="animation-delay: 0ms;"></div>

            <!-- Medium turquoise blob -->
            <div class="absolute w-48 h-48 md:w-64 md:h-64 bg-turquoise-200 rounded-full blur-3xl opacity-40 animate-float" style="animation-delay: 500ms; top: 20%; right: 10%;"></div>

            <!-- Small sunshine blob -->
            <div class="absolute w-32 h-32 md:w-48 md:h-48 bg-sunshine-200 rounded-full blur-3xl opacity-40 animate-float" style="animation-delay: 1000ms; bottom: 20%; left: 10%;"></div>
          </div>

          <!-- Icon grid -->
          <div class="relative z-10 grid grid-cols-3 gap-6 md:gap-8">
            <!-- Party Popper -->
            <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-coral-500 shadow-card flex items-center justify-center animate-float" style="animation-delay: 200ms;">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 md:w-10 md:h-10">
                <path d="M5.8 11.3 2 22l10.7-3.79"/>
                <path d="M4 3h.01"/>
                <path d="M22 8h.01"/>
                <path d="M15 2h.01"/>
                <path d="M22 20h.01"/>
                <path d="m22 2-2.24.75a2.9 2.9 0 0 0-1.96 3.12v0c.1.86-.57 1.63-1.45 1.63h-.38c-.86 0-1.6.6-1.76 1.44L14 10"/>
                <path d="m22 13-.82-.33c-.86-.34-1.82.2-1.98 1.11v0c-.11.7-.72 1.22-1.43 1.22H17"/>
                <path d="m11 2 .33.82c.34.86-.2 1.82-1.11 1.98v0C9.52 4.9 9 5.52 9 6.23V7"/>
                <path d="M11 13c1.93 1.93 2.83 4.17 2 5-.83.83-3.07-.07-5-2-1.93-1.93-2.83-4.17-2-5 .83-.83 3.07.07 5 2Z"/>
              </svg>
            </div>

            <!-- Chef Hat -->
            <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-turquoise-500 shadow-card flex items-center justify-center animate-float" style="animation-delay: 400ms;">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 md:w-10 md:h-10">
                <path d="M6 13.87A4 4 0 0 1 7.41 6a5.11 5.11 0 0 1 1.05-1.54 5 5 0 0 1 7.08 0A5.11 5.11 0 0 1 16.59 6 4 4 0 0 1 18 13.87V21H6Z"/>
                <line x1="6" x2="18" y1="17" y2="17"/>
              </svg>
            </div>

            <!-- Trophy -->
            <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-sunshine-500 shadow-card flex items-center justify-center animate-float" style="animation-delay: 600ms;">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 md:w-10 md:h-10">
                <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/>
                <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/>
                <path d="M4 22h16"/>
                <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/>
                <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/>
                <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>
              </svg>
            </div>

            <!-- Shopping Cart -->
            <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-white shadow-card flex items-center justify-center animate-float" style="animation-delay: 800ms;">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#FF6B6B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 md:w-10 md:h-10">
                <circle cx="8" cy="21" r="1"/>
                <circle cx="19" cy="21" r="1"/>
                <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/>
              </svg>
            </div>

            <!-- Music -->
            <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-white shadow-card flex items-center justify-center animate-float" style="animation-delay: 1000ms;">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#4ECDC4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 md:w-10 md:h-10">
                <path d="M9 18V5l12-2v13"/>
                <circle cx="6" cy="18" r="3"/>
                <circle cx="18" cy="16" r="3"/>
              </svg>
            </div>

            <!-- Users -->
            <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-white shadow-card flex items-center justify-center animate-float" style="animation-delay: 1200ms;">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#FFE66D" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 md:w-10 md:h-10">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
