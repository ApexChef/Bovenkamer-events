---
/**
 * Testimonials Section
 * Social proof with featured testimonials and average rating
 */

import TestimonialCard from '../ui/TestimonialCard.astro';
import { featuredTestimonials, averageRating } from '../../data/testimonials';
import { Star } from 'lucide-react';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section class={`py-16 md:py-24 ${className}`}>
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-charcoal mb-6">
        Wat feestgangers zeggen
      </h2>

      <!-- Average Rating Display -->
      <div class="flex items-center justify-center gap-3 mb-4">
        <div class="flex items-center gap-1">
          {Array.from({ length: 5 }, (_, i) => (
            <Star
              key={i}
              className="w-6 h-6 fill-sunshine-500 text-sunshine-500"
            />
          ))}
        </div>
        <span class="text-2xl font-bold text-charcoal">
          {averageRating} van de 5 sterren
        </span>
      </div>

      <p class="text-base text-gray-600">
        Gebaseerd op {featuredTestimonials.length} reviews
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-6xl mx-auto">
      {featuredTestimonials.map((testimonial, index) => (
        <div class="animate-slide-up" style={`animation-delay: ${index * 100}ms;`}>
          <TestimonialCard testimonial={testimonial} />
        </div>
      ))}
    </div>

    <!-- View All Reviews Link -->
    <div class="text-center mt-12">
      <a
        href="/reviews"
        class="inline-flex items-center gap-2 text-lg font-semibold text-coral-600 hover:text-coral-700 transition-colors duration-200 group"
      >
        <span>Lees alle reviews</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform duration-200">
          <path d="M5 12h14"/>
          <path d="m12 5 7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
